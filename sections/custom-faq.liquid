<section class="faq-wrapper" style="padding:40px 0;">
  <div class="faq-inner" style="max-width:88.88%;margin:0 auto;">
    {% if section.settings.heading != blank %}
      <h2 class="faq-heading" style="font-family:'Quincy CF', serif; text-align:center; margin-bottom:2rem;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="faq-accordion">
      {% assign current_row = nil %}
      {% for block in section.blocks %}
        {% if block.type == 'accordion_row' %}
          {%- if current_row != nil -%}
            </div></details></accordion-custom>
          {%- endif -%}

          <accordion-custom>
            <details class="faq-details" {{ block.shopify_attributes }}>
              <summary class="faq-question">
                {{ block.settings.question }}
                <span class="svg-wrapper icon-plus">
                  {{ 'icon-plus.svg' | inline_asset_content }}
                </span>
              </summary>
              <div class="faq-answer">
          {% assign current_row = block.id %}
        {% elsif block.type == 'text' %}
          <div class="faq-text" style="margin:0.5rem 0;">
            {{ block.settings.text }}
          </div>
        {% elsif block.type == 'button' %}
          <div class="faq-button" style="margin:1rem 0;">
            <a href="{{ block.settings.link }}" class="btn" style="
              background:#000;
              color:#fff;
              padding:10px 20px;
              border-radius:{{ block.settings.border_radius }}px;
              text-decoration:none;">
              {{ block.settings.label }}
            </a>
          </div>
        {% endif %}
      {% endfor %}

      {%- if current_row != nil -%}
        </div></details></accordion-custom>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "accordion_row",
      "name": "FAQ Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Sample question?"
        }
      ]
    },
    {
      "type": "text",
      "name": "Answer Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer Text",
          "default": "<p>Your answer here</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Answer Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button Label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "range",
          "id": "border_radius",
          "label": "Button Border Radius",
          "min": 0,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 4
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "accordion_row",
          "settings": { "question": "Is shipping free?" }
        },
        {
          "type": "text",
          "settings": { "text": "<p>Yes, free shipping on orders over $50.</p>" }
        },
        {
          "type": "button",
          "settings": { "label": "Shop now", "link": "/collections/all" }
        },
        {
          "type": "accordion_row",
          "settings": { "question": "Can I return items?" }
        },
        {
          "type": "text",
          "settings": { "text": "<p>Yes, returns are accepted within 30 days.</p>" }
        }
      ]
    }
  ]
}
{% endschema %}