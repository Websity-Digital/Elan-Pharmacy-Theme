{% stylesheet %}
.ai-card-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 4 cards in a row */
  gap: var(--grid-gap);
  width: 100%;
}

.ai-card {
  width: 100%;
  height:350px;
  position: relative;
  background: var(--card-bg, #F2F2F2);
  border: var(--outline-width) solid transparent;
  border-radius: var(--card-radius);
  opacity: var(--card-opacity);
  transform: rotate(var(--card-angle));
  transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
  flex-shrink: 0;
}
.ai-card:hover {
  transform: translateY(-var(--hover-lift)) rotate(var(--card-angle));
  border-color: var(--hover-outline);
  box-shadow: 0 calc(var(--hover-lift) * 2) calc(var(--hover-lift) * 4) rgba(0,0,0,.12);
}

/* ====== ICON (TOP-LEFT) ====== */
.ai-card-icon {
  position: absolute;
  top: var(--icon-padding);
  left: var(--icon-padding);
  z-index: 2;
}
.ai-card-icon img {
  width: var(--icon-custom-size);
  height: var(--icon-custom-size);
  object-fit: contain; /* or cover if you want cropping */
}
.ai-card-icon svg {
  display: block;
  width: var(--icon-custom-size);
  height: auto;
}

.ai-card-text-wrap {
  position: absolute;
  left: var(--text-padding);
  right: var(--text-padding);
  bottom: var(--text-padding);
  z-index: 1;
}
.ai-card-text {
  color: var(--text-color);
  font-size: var(--text-size);
  font-weight: var(--text-weight);
  line-height: 1.25;
  text-align: left;
}

.ai-card-link {
  position: absolute;
  inset: 0;
  z-index: 3;
  text-decoration: none;
}

/* Tablet (2 columns) */
@media (max-width: 1024px) {
  .ai-card-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile (1 column) */
@media (max-width: 640px) {
  .ai-card-grid {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}

<div class="section section--spacing section--{{ section.settings.section_width }}">
  <div class="section__inner"
       style="
         --grid-gap: {{ section.settings.grid_gap }}px;
         --card-radius: {{ section.settings.card_radius }}px;
         --card-angle: {{ section.settings.card_angle }}deg;
         --card-opacity: {{ section.settings.card_opacity | divided_by: 100.0 }};
         --hover-lift: {{ section.settings.hover_lift }}px;
         --outline-width: {{ section.settings.outline_width }}px;
         --text-color: {{ section.settings.text_color }};
         --text-size: {{ section.settings.text_size }}px;
         --text-weight: {{ section.settings.text_weight }};
         --text-padding: {{ section.settings.text_padding }}px;
         --icon-custom-size: {{ section.settings.icon_custom_size }};
         --icon-padding: {{ section.settings.icon_padding }}px;
       ">

    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_size }} class="section__heading">
        {{ section.settings.heading }}
      </{{ section.settings.heading_size }}>
    {% endif %}

     <!-- Render any theme blocks dynamically -->
      {% for block in section.blocks %}
       {% render block %}
      {% endfor %}

    <div class="ai-card-grid section-content"
      style="padding-top:{{ section.settings.padding-top}}px"
      
    >
      <!-- Render the 4 static cards from settings -->
      {% for i in (1..4) %}
        {% assign card_bg_key = 'card_bg_' | append: i %}
        {% assign card_icon_key = 'card_icon_' | append: i %}
        {% assign card_text_key = 'card_text_' | append: i %}
        {% assign card_link_key = 'card_link_' | append: i %}
        {% assign hover_outline_key = 'card_' | append: i | append: '_hover_outline_color' %}

        <div class="ai-card"
             style="--card-bg: {{ section.settings[card_bg_key] }};
                    --hover-outline: {{ section.settings[hover_outline_key] | default: '#000'}};">
          
          {% assign icon = section.settings[card_icon_key] %}
          {% if icon %}
            <div class="ai-card-icon">
              <img src="{{ icon | image_url: width: 400 }}" 
                   alt="{{ icon.alt | default: 'icon' | escape }}" 
                   loading="lazy">
            </div>
          {% else %}
            <div class="ai-card-icon">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 2l2.5 6.8L22 9l-6.2 2 .7 6.9L12 15l-4.5 2.9.7-6.9L2 9l7.5-.2z"/>
              </svg>
            </div>
          {% endif %}

          <div class="ai-card-text-wrap">
            <div class="ai-card-text">{{ section.settings[card_text_key] }}</div>
          </div>

          {% if section.settings[card_link_key] != blank %}
            <a class="ai-card-link" href="{{ section.settings[card_link_key] }}"></a>
          {% endif %}
        </div>
      {% endfor %}

     
    </div>
  </div>
</div>

