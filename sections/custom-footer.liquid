


<footer class="elan-footer">
  <div class="elan-footer__container">
    <div class="elan-footer__content">
      <!-- Shop Column -->
      <div class="elan-footer__column">
        <h3 class="elan-footer__heading">{{ section.settings.shop_heading | default: 'Shop' }}</h3>
        <ul class="elan-footer__links">
          {% comment %} Added support for Shopify menu system {% endcomment %}
          {% if section.settings.shop_menu != blank %}
            {% for link in linklists[section.settings.shop_menu].links %}
              <li>
                <a href="{{ link.url }}" class="elan-footer__link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          {% else %}
            {% for block in section.blocks %}
              {% if block.type == 'shop_link' %}
                <li>
                  <a href="{{ block.settings.url }}" class="elan-footer__link">
                    {{ block.settings.text }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          {% endif %}
        </ul>
      </div>

      <!-- Customer Service Column -->
      <div class="elan-footer__column">
        <h3 class="elan-footer__heading">{{ section.settings.service_heading | default: 'Customer service' }}</h3>
        <ul class="elan-footer__links">
          {% comment %} Added support for Shopify menu system {% endcomment %}
          {% if section.settings.service_menu != blank %}
            {% for link in linklists[section.settings.service_menu].links %}
              <li>
                <a href="{{ link.url }}" class="elan-footer__link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          {% else %}
            {% for block in section.blocks %}
              {% if block.type == 'service_link' %}
                <li>
                  <a href="{{ block.settings.url }}" class="elan-footer__link">
                    {{ block.settings.text }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          {% endif %}
        </ul>
      </div>

      <!-- About Us Column -->
      <div class="elan-footer__column elan-footer__column--about">
        <h3 class="elan-footer__heading">{{ section.settings.about_heading | default: 'About us' }}</h3>
        <div class="elan-footer__about-content">
          <p class="elan-footer__description">
            {{ section.settings.about_text | default: 'Moving forward with confidence starts with the right care. Built in the UK and led by registered pharmacists, we make healthcare feel effortless and reliable at every step.' }}
          </p>
          <div class="row-container">
  <!-- Payment Section -->
  <div class="elan-footer__payment">
    <h4 class="elan-footer__payment-heading">{{ section.settings.payment_heading | default: 'Payment' }}</h4>
    <div class="elan-footer__payment-icons">
  {%- for type in shop.enabled_payment_types -%}
    {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
  {%- endfor -%}
    </div>
  </div>

  <!-- Social Media -->
  <div class="elan-footer__social">
    <h4 class="elan-footer__social-heading">{{ section.settings.social_heading | default: 'Follow us on' }}</h4>
    <div class="elan-footer__social-icons">
      {% if section.settings.twitter_url != blank %}
        <a href="{{ section.settings.twitter_url }}" class="elan-footer__social-link" target="_blank" rel="noopener">
          <!-- Twitter Icon -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.instagram_url != blank %}
        <a href="{{ section.settings.instagram_url }}" class="elan-footer__social-link" target="_blank" rel="noopener">
          <!-- Instagram Icon -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-4.36-.149-6.782-2.618-6.979-6.98-.059-1.28-.073-1.689-.073-4.948 0-3.259.014-3.667.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.203-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.facebook_url != blank %}
        <a href="{{ section.settings.facebook_url }}" class="elan-footer__social-link" target="_blank" rel="noopener">
          <!-- Facebook Icon -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</div>


      </div>
      </div>

      <!-- Logo -->
      <div class="elan-footer__column elan-footer__column--brand">
        <div class="elan-footer__logo">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | image_url: width: 200 }}" 
                 alt="{{ shop.name }}" 
                 class="elan-footer__logo-image"
                 width="166"
                 height="auto">
          {% else %}
            <h2 class="elan-footer__logo-text">
              {{ section.settings.logo_text | default: 'Elan' }}<br>
              <span class="elan-footer__logo-subtitle">{{ section.settings.logo_subtitle | default: 'pharmacy' }}</span>
            </h2>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="elan-footer__bottom">
      <div class="elan-footer__bottom-content">
        <p class="elan-footer__copyright">
          {{ section.settings.copyright_text | default: 'Elan pharmacy. All rights reserved 2025' }}
        </p>
        <div class="elan-footer__legal-links">
          {% if section.settings.privacy_url != blank %}
            <a href="{{ section.settings.privacy_url }}" class="elan-footer__legal-link">
              {{ section.settings.privacy_text | default: 'Privacy policy' }}
            </a>
          {% endif %}
          {% if section.settings.terms_url != blank %}
            <a href="{{ section.settings.terms_url }}" class="elan-footer__legal-link">
              {{ section.settings.terms_text | default: 'Terms of use' }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>

.row-container{
  display:flex;
  flex-direction:row;
  align:flex-start;
  justify:center;
  gap:40px;


}
.elan-footer {
  background-color: #2d2d2d;
  color: #ffffff;
  padding: 60px 0 0;
}

.elan-footer__container {

  max-width: 88.88%;
  margin: 0 auto;
}

.elan-footer__content {
  display: grid;
  grid-template-columns: 1fr 1fr 1.5fr 1fr;
  gap: 60px;
  padding-bottom: 40px;
}

.elan-footer__column {
  display: flex;
  flex-direction: column;
}

.elan-footer__column--about {
  max-width: none;
  display:flex;
 
}

.elan-footer__column--brand {
  align-items: flex-end;
  text-align: right;
}

.elan-footer__heading {
  color: #DAFF9D;
  font-size: 16px;
  font-weight: 600;
  padding-bottom: 20px;
  padding-top: 0;
}

.elan-footer__links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.elan-footer__links li {
  padding-bottom: 12px;
}

.elan-footer__link {
  color: #ffffff;
  text-decoration: none;
  font-size: 14px;
  line-height: 1.4;
  transition: color 0.3s ease;
}

.elan-footer__link:hover {
  color: #DAFF9D;
}

.elan-footer__description {
  font-size: 14px;
  line-height: 1.6;
  padding-bottom: 30px;
  color: #ffffff;
}

.elan-footer__payment {
  padding-bottom: 20px;
}

.elan-footer__payment-heading {
  color: #DAFF9D;
  font-size: 16px;
  font-weight: 600;
  padding-bottom: 15px;
  padding-top: 0;
}

.elan-footer__payment-icons {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.elan-footer__payment-icon {
  width: 40px;
  height: 25px;
  object-fit: contain;
  background: #ffffff;
  border-radius: 4px;
  padding: 2px;
}

.elan-footer__logo-text {
  font-size: 48px;
  font-weight: 300;
  margin: 0;
  line-height: 1;
  color: #ffffff;
}

.elan-footer__logo-subtitle {
  font-size: 24px;
  font-weight: 300;
  color: #ffffff;
}

.elan-footer__logo-image {
  max-width: 200px;
  height: auto;
}



.elan-footer__social-heading {
  color: #DAFF9D;
  font-size: 16px;
  font-weight: 600;
  padding-bottom: 15px;
  padding-top: 0;
}

.elan-footer__social-icons {
  display: flex;
  gap: 15px;
  justify-content: flex-start;
}

.elan-footer__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background-color: #404040;
  border-radius: 50%;
  color: #ffffff;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.elan-footer__social-link:hover {
  background-color: #a8d5ba;
  color: #2d2d2d;
}

.elan-footer__bottom {
  border-top: 1px solid #404040;
  padding: 20px 0;
}

.elan-footer__bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.elan-footer__copyright {
  font-size: 14px;
  color: #cccccc;
  margin: 0;
}

.elan-footer__legal-links {
  display: flex;
  gap: 30px;
}

.elan-footer__legal-link {
  color: #cccccc;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.3s ease;
}

.elan-footer__legal-link:hover {
  color: #a8d5ba;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .elan-footer__content {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .elan-footer__column--brand {
    align-items: flex-start;
    text-align: left;
  }
  
  .elan-footer__social-icons {
    justify-content: flex-start;
  }
  
  .elan-footer__bottom-content {
    flex-direction: column;
    gap: 15px;
    text-align: center;
  }
  
  .elan-footer__legal-links {
    gap: 20px;
  }
}

@media (max-width: 480px) {
  .elan-footer {
    padding: 40px 0 0;
  }
  
  .elan-footer__container {
    padding: 0 15px;
  }
  
  .elan-footer__content {
    gap: 30px;
  }
  
  .elan-footer__logo-text {
    font-size: 36px;
  }
  
  .elan-footer__logo-subtitle {
    font-size: 18px;
  }
}
</style>

