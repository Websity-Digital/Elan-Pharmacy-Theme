<style>


.process-tabs__title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 400;
  color: #333;
  margin-bottom: 60px;
  letter-spacing: -0.02em;
}

.process-tabs__nav {
    display: flex;
    justify-content: space-between;
    gap: 80px;
    margin-bottom: 40px;
}

.process-tabs__step {
 display: flex;
  flex-direction: column;
  align-items: start;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  color: inherit;
  padding-top: 20px;
}

.process-tabs__number {
  position: relative;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: #d4b5a0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
  font-weight: 500;
  margin-bottom: 15px;
  transition: all 0.3s ease;
}

/* brown line ONLY on active tab */
.process-tabs__step.active {
  border-top: 3px solid #D0B9A6;
}
.process-tabs__step.active .process-tabs__number {
  background: #8b6f47;
  transform: scale(1.1);
}

.process-tabs__step:hover .process-tabs__number {
  background: #8b6f47;
  transform: scale(1.05);
}

.process-tabs__label {
  font-size: 1.1rem;
  font-weight: 500;
  color: #333;
  text-align: left;
  line-height: 1.3;
}
a.process-tabs__step {
    width: 100%;
}
.process-tabs__step.active .process-tabs__label {
  color: #0c0b0b;
}

.process-tabs__content {
  position: relative;
  min-height: 400px;
}

.process-tabs__panel {
  display: none;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0,0,0,0.1);
  position: relative;
}

.process-tabs__panel.active {
  display: block;
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.process-tabs__image {
  width: 100%;
  height: 400px;
  object-fit: cover;
  display: block;
}

.process-tabs__overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  color: white;
  padding: 40px 30px 30px;
}

.process-tabs__description {
  font-size: 1.1rem;
  line-height: 1.5;
  margin: 0;
  max-width: 500px;
}

@media (max-width: 768px) {
  .process-tabs__nav {
    gap: 40px;
  }
  
  .process-tabs__title {
    font-size: 2rem;
    margin-bottom: 40px;
  }
  
  .process-tabs__number {
    width: 50px;
    height: 50px;
    font-size: 1rem;
  }
  
  .process-tabs__label {
    font-size: 1rem;
  }
  
  .process-tabs__image {
    height: 300px;
  }
  
  .process-tabs__description {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .process-tabs__nav {
    gap: 20px;
  }
  
  .process-tabs__number {
    width: 45px;
    height: 45px;
    font-size: 0.9rem;
  }
  
  .process-tabs__label {
    font-size: 0.9rem;
    max-width: 100px;
  }
}

</style>

<div class="process-tabs" id="process-tabs-{{ section.id }}"
  style="padding:{{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;"
>
  {% if section.settings.heading != blank %}
    <h2 class="process-tabs__heading"
      style="text-align:{{ section.settings.heading_alignment }};"
    >{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="process-tabs__nav">
    {% for block in section.blocks %}
      <a href="#" 
         class="process-tabs__step{% if forloop.first %} active{% endif %}" 
         data-tab="{{ forloop.index }}"
         {{ block.shopify_attributes }}>
        <div class="process-tabs__number">{{ forloop.index }}</div>
        <div class="process-tabs__label">{{ block.settings.title }}</div>
      </a>
    {% endfor %}
  </div>

  <div class="process-tabs__content">
    {% for block in section.blocks %}
      <div class="process-tabs__panel{% if forloop.first %} active{% endif %}" 
           data-panel="{{ forloop.index }}"
           {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <!-- Fixed image_url filter instead of img_url -->
          <img src="{{ block.settings.image | image_url: width: 1200, height: 400, crop: 'center' }}" 
               alt="{{ block.settings.image.alt | default: block.settings.title }}"
               class="process-tabs__image"
               width="1200"
               height="400"
               loading="lazy">
        {% endif %}
        
        {% if block.settings.description != blank %}
          <div class="process-tabs__overlay">
            <p class="process-tabs__description">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabsContainer = document.getElementById('process-tabs-{{ section.id }}');
    if (!tabsContainer) return;
    
    const steps = tabsContainer.querySelectorAll('.process-tabs__step');
    const panels = tabsContainer.querySelectorAll('.process-tabs__panel');
    
    console.log('[v0] Found', steps.length, 'steps and', panels.length, 'panels');
    
    steps.forEach(function(step) {
      step.addEventListener('click', function(e) {
        e.preventDefault();
        
        const tabNumber = this.getAttribute('data-tab');
        console.log('[v0] Clicked tab:', tabNumber);
        
        // Remove active class from all steps and panels
        steps.forEach(function(s) { s.classList.remove('active'); });
        panels.forEach(function(p) { p.classList.remove('active'); });
        
        // Add active class to clicked step and corresponding panel
        this.classList.add('active');
        const targetPanel = tabsContainer.querySelector('[data-panel="' + tabNumber + '"]');
        if (targetPanel) {
          targetPanel.classList.add('active');
          console.log('[v0] Activated panel:', tabNumber);
        } else {
          console.log('[v0] Panel not found for tab:', tabNumber);
        }
      });
    });
  });
</script>

