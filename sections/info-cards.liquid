    { "type": "@app" },
    { "type": "text" },
    { "type": "icon" },
    { "type": "image" },
    { "type": "button" },
    { "type": "video" },
    { "type": "group" },
    { "type": "spacer" },
    { "type": "_divider" }
  ],
  "presets": [
    {
      "name": "Flexible Info Cards",
      "category": "Custom Sections"
    }
  ],
  "max_blocks": 20
}
{% endschema %}
